[core]
	editor = code -w
	excludesfile = ~/.gitignore
[rerere]
	enabled = true
[push]
	default = simple
[rebase]
	autosquash = true
	autostash = true
[user]
	name = Marek Skrajnowski
	email = mskrajnowski@users.noreply.github.com
[tig]
	horizontal-scroll = 10%
	vertical-split = false
	tab-size = 4
	wrap-lines = true
	ignore-space = some
	ignore-case = true
	refresh-mode = auto
	main-view = id:true date:default author:full commit-title:yes,graph,refs,overflow=no
[include]
	path = ~/.gitconfig.local
